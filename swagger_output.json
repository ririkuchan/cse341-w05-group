  "definitions": {
    "Client": {
      "type": "object",
      "required": [
        "name",
        "industry",
        "contact"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Client Name"
        },
        "industry": {
          "type": "string",
          "example": "Tech"
        },
        "contact": {
          "type": "string",
          "example": "email@example.com"
        }
      }
    },
    "Project": {
      "type": "object",
      "required": [
        "name",
        "clientId",
        "status",
        "dueDate"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Project X"
        },
        "clientId": {
          "type": "string",
          "example": "123abc"
        },
        "status": {
          "type": "string",
          "example": "Active"
        },
        "dueDate": {
          "type": "string",
          "example": "2025-07-15"
        }
      }
    },
    "Task": {
      "type": "object",
      "required": [
        "title",
        "status",
        "assignedTo"
      ],
      "properties": {
        "title": {
          "type": "string",
          "example": "Task Title"
        },
        "status": {
          "type": "string",
          "example": "Pending"
        },
        "assignedTo": {
          "type": "string",
          "example": "Employee ID"
        }
      }
    },
    "Employee": {
      "type": "object",
      "required": [
        "name",
        "position",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "John Doe"
        },
        "position": {
          "type": "string",
          "example": "Manager"
        },
        "email": {
          "type": "string",
          "example": "john@example.com"
        }
